<style media="screen">
  .box-a,.box-b,.box-c,.box-d,.box-e,.box-f{
width:100%;
height:675px;
overflow: auto;
background-image: url();
  }
  .grey{
    background-color: grey;
  }
  .blue{
    background-color: skyblue;
  }
  .a{
font-size: 69px;
color:white;
font-weight: bold;
text-align: center;
margin-top: 160px;
  }
  p{
    color:white;
    text-align: center;
  }
</style>


<!-- BOXA-->
<div class="box-a grey">
  <div class="a">
    BUILDING CAREERS,
    <br>LEADING TO SUCCESS.
    </div>
<p>
Career Partners ——Xinshengdaxue’s employment site.
<br>Search jobs at Career Partners. Find work or recruit the ideal candidates.
</p>



</div>
<!--BOXB -->
<div class="box-b blue">

</div>
<!--BOXC -->
<div class="box-c grey">

</div>
<!-- BOXD-->
<div class="box-d blue">

</div>
<!--BOXE -->
<div class="box-e grey">
  <div class="dropdown clearfix pull-right">

    <button class="btn btn-default dropdown-toggle orderevey" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-exapanded="true">
    Order
      <span class="caret"></span>
    </button>

    <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
      <li> <%= link_to("By Lower Bound", jobs_path(:order => "by_lower_bound")) %> </li>
      <li> <%= link_to("By Upper Bound", jobs_path(:order => "by_upper_bound")) %> </li>
      <li> <%= link_to("By Created Time", jobs_path) %> </li>
    </ul>


  </div>

  <h1 style="line-height:60px;">Job Listing</h1>


  <table class="table table-boldered table-inverse">

  <thead class="thead-inverse">

  <tr>
    <td>Job Title</td>
    <td>Minimum Salary</td>
    <td>Maximum Salary</td>
    <td>Created at</td>
  </tr>

  </thead>


  <tbody>
    <% @jobs.each do |job| %>

    <tr>
      <td><%= link_to(job.title, job_path(job))%></td>
      <td><%= job.wage_lower_bound %></td>
      <td><%= job.wage_upper_bound %></td>
      <td><%= job.created_at %></td>
    </tr>

  </tbody>
    <% end %>
  </table>


</div>
<!--BOXF -->
<div class="box-f blue">

</div>
